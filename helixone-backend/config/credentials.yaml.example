# HelixOne - API Credentials Template
# IMPORTANT: Copy this to credentials.yaml and fill in your keys
# credentials.yaml is gitignored - never commit real keys!

# FRED API (Federal Reserve Economic Data)
fred:
  api_key: "YOUR_FRED_API_KEY"
  # Get free key at: https://fred.stlouisfed.org/docs/api/api_key.html

# Alpha Vantage
alpha_vantage:
  api_key: "YOUR_ALPHA_VANTAGE_KEY"
  # Get free key at: https://www.alphavantage.co/support/#api-key

# Finnhub
finnhub:
  api_key: "YOUR_FINNHUB_KEY"
  # Get free key at: https://finnhub.io/register

# Polygon.io
polygon:
  api_key: "YOUR_POLYGON_KEY"
  # Get key at: https://polygon.io/

# Financial Modeling Prep
fmp:
  api_key: "YOUR_FMP_KEY"
  # Get free key at: https://financialmodelingprep.com/developer

# Quandl / Nasdaq Data Link
quandl:
  api_key: "YOUR_QUANDL_KEY"
  # Get key at: https://data.nasdaq.com/

# News API
newsapi:
  api_key: "YOUR_NEWSAPI_KEY"
  # Get free key at: https://newsapi.org/

# Twitter API (for sentiment)
twitter:
  api_key: "YOUR_TWITTER_API_KEY"
  api_secret: "YOUR_TWITTER_API_SECRET"
  bearer_token: "YOUR_TWITTER_BEARER_TOKEN"

# Reddit API (for sentiment)
reddit:
  client_id: "YOUR_REDDIT_CLIENT_ID"
  client_secret: "YOUR_REDDIT_CLIENT_SECRET"
  user_agent: "HelixOne Trading Bot 1.0"

# Interactive Brokers
interactive_brokers:
  account_id: "YOUR_IB_ACCOUNT"
  # TWS/Gateway settings in settings.yaml

# MSCI ESG (if available)
msci_esg:
  api_key: "YOUR_MSCI_KEY"
  # Enterprise subscription required

# Sustainalytics ESG
sustainalytics:
  api_key: "YOUR_SUSTAINALYTICS_KEY"

# Database
database:
  username: "helixone_user"
  password: "YOUR_DB_PASSWORD"

# Redis
redis:
  password: "YOUR_REDIS_PASSWORD"

# Notification Services
notifications:
  slack:
    webhook_url: "YOUR_SLACK_WEBHOOK"

  email:
    smtp_host: "smtp.gmail.com"
    smtp_port: 587
    username: "your-email@gmail.com"
    password: "YOUR_APP_PASSWORD"

  twilio:  # SMS alerts
    account_sid: "YOUR_TWILIO_SID"
    auth_token: "YOUR_TWILIO_TOKEN"
    from_number: "+1234567890"
    to_number: "+1234567890"
