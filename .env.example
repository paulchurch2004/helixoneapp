# ============================================================================
# HelixOne Environment Variables - TEMPLATE
# ============================================================================
# INSTRUCTIONS:
# 1. Copier ce fichier: cp .env.example .env
# 2. Remplacer TOUTES les valeurs "your_key_here" par vos vraies clés
# 3. NE JAMAIS committer le fichier .env !
# ============================================================================

# ============================================================================
# API KEYS - Market Data
# ============================================================================

# Alpha Vantage (données de marché + fondamentaux)
# Obtenir une clé sur: https://www.alphavantage.co/support/#api-key
# Limite: 500 requêtes/jour (gratuit)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# FRED - Federal Reserve Economic Data (données macroéconomiques USA)
# Obtenir une clé sur: https://fred.stlouisfed.org/docs/api/api_key.html
# Limite: ILLIMITÉ (gratuit)
FRED_API_KEY=your_fred_api_key_here

# Finnhub (données marché alternatives - OPTIONNEL)
# Obtenir une clé sur: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_key_here

# NewsAPI (actualités financières - OPTIONNEL)
# Obtenir une clé sur: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# Financial Modeling Prep (fondamentaux - OPTIONNEL)
# Obtenir une clé sur: https://site.financialmodelingprep.com/developer/docs/
FMP_API_KEY=your_fmp_key_here

# ============================================================================
# Database
# ============================================================================

# PostgreSQL (recommandé pour production)
DATABASE_URL=postgresql://username:password@localhost:5432/helixone

# SQLite (pour développement local uniquement)
# DATABASE_URL=sqlite:///./helixone.db

# ============================================================================
# Cache & Queue
# ============================================================================

# Redis (cache + message queue)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# Security & Authentication
# ============================================================================

# Secret key pour JWT (GÉNÉRER UNE CLÉ ALÉATOIRE FORTE !)
# Générer avec: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERATE_A_RANDOM_SECRET_KEY_HERE

# JWT Algorithm
ALGORITHM=HS256

# Token expiration (en minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# IBKR (Interactive Brokers - OPTIONNEL)
# ============================================================================

IBKR_HOST=127.0.0.1
IBKR_PORT=7496
IBKR_CLIENT_ID=2
IBKR_GATEWAY_PORT=4001

# ============================================================================
# AI Services (OPTIONNEL)
# ============================================================================

# OpenAI (pour fonctionnalités AI optionnelles)
# Obtenir une clé sur: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# ============================================================================
# Monitoring & Logging (OPTIONNEL)
# ============================================================================

# Sentry (error tracking)
# Obtenir un DSN sur: https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Application Settings
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# CORS origins (séparés par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# IMPORTANT REMINDERS
# ============================================================================
#
# 1. NEVER commit the .env file to Git!
# 2. Generate strong random values for SECRET_KEY
# 3. Use different keys for dev/staging/production
# 4. Rotate keys regularly (every 90 days recommended)
# 5. Keep backups of your .env in a secure password manager
#
# ============================================================================
